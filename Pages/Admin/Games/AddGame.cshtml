@page
@model PressStart.Pages.Admin.Games.AddGameModel
@{
}
<h1>Add a Game</h1>
<div class="mt-3">
  <form method="POST" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Index">
    <div class="form-group row">
      <label asp-for="GameName" class="col-sm-2 col-form-label">Game Name</label>
      <div class="col-sm-10">
        <input asp-for="GameName" class="form-control" />
        <span asp-validation-for="GameName"></span>
      </div>
    </div>
    <div class="form-group row">
      <label asp-for="GameType" class="col-sm-2 col-form-label">Game Type</label>
      <div class="col-sm-10">
        <textarea asp-for="GameType" class="form-control" rows="5"></textarea>
        <span asp-validation-for="GameType"></span>
      </div>
    </div>
    
    
    <div class="form-group row">
      <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description"></span>
      </div>
    </div>
    <p>
    <div class="form-group row">
      <p>Upload Thumbail</p>
      <label asp-for="UploadThumb" class="col-sm-2 col-form-label"></label>
      <input asp-for="UploadThumb" type="file" name="files" multiple />
    </div>
    <div class="form-group row">
      <p>Upload Game Rom</p>
      <label asp-for="UploadRom" class="col-sm-2 col-form-label"></label>
      <input asp-for="UploadRom" type="file" name="files" multiple />
    </div>
    
    <input class="btn btn-primary" type="submit" value="Upload" />
    </p>
  </form>
</div>