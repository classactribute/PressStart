@page
@model PressStart.Pages.AddGameModel
@{
}
<h1>Add a Game</h1>
<div class="mt-3">
  <form method="POST" enctype="multipart/form-data" asp-controller="FileUpload" asp-action="Admin/Game/Index">
    <div class="form-group row">
      <label asp-for="GameName" class="col-sm-2 col-form-label">Game Name</label>
      <div class="col-sm-10">
        <input asp-for="GameName" class="form-control" />
        <span asp-validation-for="GameName"></span>
      </div>
    </div>
    <div class="form-group row">
      <label asp-for="GameType" class="col-sm-2 col-form-label">Game Type</label>
      <div class="col-sm-10">
        <textarea asp-for="GameType" class="form-control" rows="5"></textarea>
        <span asp-validation-for="GameType"></span>
      </div>
    </div>
    <div class="form-group row">
      <label asp-for="GamePath" class="col-sm-2 col-form-label">Upload Game Rom</label>
      <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
    </div>
    <div class="form-group row">
      <label asp-for="ThumbnailPath" class="col-sm-2 col-form-label">Thumbnail Path</label>
      <div class="col-sm-10">
        <textarea asp-for="ThumbnailPath" class="form-control" rows="5"></textarea>
        <span asp-validation-for="ThumbnailPath"></span>
      </div>
    </div>
    <div class="form-group row">
      <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description"></span>
      </div>
    </div>
    <p>
      <!-- <input type="hidden" asp-for="UserName" value=@User.Identity.Name /> -->
      <button class="btn btn-primary" value="Upload" >Add Article</button>
    </p>
  </form>
</div>